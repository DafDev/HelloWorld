<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/layout_login_hour">


    <TextView
        android:id="@+id/text_auth_login_view"
        android:text="@string/login"
        android:layout_gravity="center_vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_auth_login_data"

        android:layout_gravity="center_vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_auth_hour_view"
        android:text="@string/hour"
        android:layout_gravity="center_vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_auth_hour_data"

        android:layout_gravity="center_vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>